// src/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// --- MODELS ---

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?                // <-- add this
  createdAt DateTime @default(now()) // <-- and this
  posts     Post[]
}

model Post {
  id        String   @id @default(cuid())
  title     String
  content   String?
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  createdAt DateTime @default(now())
}
